<div class="page-header">
    <h2>Quản lý khách hàng</h2>
    <a href="/customers/add" class="btn btn-primary">Thêm khách hàng</a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Mã KH</th>
                <th>Tên khách hàng</th>
                <th>Số điện thoại</th>
                <th>Địa chỉ</th>
                <th>Ghi chú</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each customers}}
            <tr>
                <td>{{this.code}}</td>
                <td>{{this.name}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.address}}</td>
                <td>{{this.note}}</td>
                <td>
                    <a href="/customers/{{this.phone}}" class="btn-icon">Chi tiết</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .btn-icon {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }
</style>