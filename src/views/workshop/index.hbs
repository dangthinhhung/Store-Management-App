<div class="page-header">
    <h2>Quản lý xưởng sửa chữa</h2>
    <a href="/workshop/create" class="btn btn-primary">Tiếp nhận máy</a>
</div>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Mã phiếu</th>
                <th>Ngày nhận</th>
                <th>Khách hàng</th>
                <th>Tổng chi phí</th>
                <th>Đã thanh toán</th>
                <th>Còn lại</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>{{this.code}}</td>
                <td>{{this.created_at}}</td>
                <td>{{#if this.customer_name}}{{this.customer_name}}{{else}}Khách lẻ{{/if}}</td>
                <td>{{formatCurrency this.total_cost}}</td>
                <td>{{formatCurrency this.total_paid}}</td>
                <td>
                    {{#if (eq this.total_cost this.total_paid)}}
                    <span class="text-success">0 ₫</span>
                    {{else}}
                    <span class="text-danger">{{formatCurrency this.remaining}}</span>
                    {{/if}}
                </td>
                <td>
                    {{#if (eq this.status 'PAID')}}
                    <span class="badge badge-success">{{workshopStatus this.status}}</span>
                    {{else if (eq this.status 'REPAIRED_DEBT')}}
                    <span class="badge badge-warning">{{workshopStatus this.status}}</span>
                    {{else if (eq this.status 'RETURNED')}}
                    <span class="badge badge-danger">{{workshopStatus this.status}}</span>
                    {{else}}
                    <span class="badge badge-info">{{workshopStatus this.status}}</span>
                    {{/if}}
                </td>
                <td>
                    <a href="/workshop/{{this.id}}" class="btn-icon">Chi tiết</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .badge-success {
        background-color: #dcfce7;
        color: #166534;
    }

    .badge-warning {
        background-color: #fef9c3;
        color: #854d0e;
    }

    .badge-info {
        background-color: #dbeafe;
        color: #1e40af;
    }

    .badge-danger {
        background-color: #fee2e2;
        color: #991b1b;
    }

    .text-success {
        color: #166534;
        font-weight: bold;
    }

    .text-danger {
        color: #991b1b;
        font-weight: bold;
    }

    .btn-icon {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }
</style>